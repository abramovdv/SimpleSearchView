<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SimpleSearchView">
        <attr name="backIconAlpha" />
        <attr name="iconsAlpha" />

        <attr name="backIconTint" format="color" />
        <attr name="iconsTint" format="color" />

        <attr name="cursorColor" format="color" />
        <attr name="hintColor" format="color" />

        <attr name="searchBackground" format="reference|color" />

        <attr name="searchBackIcon" format="reference" />
        <attr name="searchClearIcon" format="reference" />
        <attr name="searchVoiceIcon" format="reference" />

        <attr name="voiceSearch" format="boolean" />

        <attr name="voiceSearchPrompt" format="string" />

        <attr name="android:hint" format="string" />
        <attr name="android:inputType" />
        <attr name="android:textColor" format="color" />

        <attr name="type" format="enum">
            <enum name="bar" value="0" />
            <enum name="card" value="1" />
        </attr>
    </declare-styleable>


    <attr name="alphaEmphasisHigh" format="float"/>
    <attr name="alphaEmphasisMedium" format="float"/>
    <attr name="alphaEmphasisDisabled" format="float"/>

    <!--Common attributes-->
    <attr name="colorFillColor" format="color"/>
    <attr name="colorStrokeColor" format="color"/>

    <!--Label view attributes-->
    <declare-styleable name="LabelLinkView">
        <attr name="android:text" />
        <attr name="leadingIcon" format="integer" />
        <attr name="linkUrl" format="string" />
    </declare-styleable>

    <!--Color attribute view attributes-->
    <declare-styleable name="ColorAttributeView">
        <attr name="android:text"/>
        <attr name="colorFillColor"/>
        <attr name="colorStrokeColor"/>
    </declare-styleable>

    <!--Color dot view attributes-->
    <declare-styleable name="ColorDotView">
        <attr name="colorFillColor"/>
        <attr name="colorStrokeColor"/>
    </declare-styleable>

    <!--Type attribute view attributes-->
    <declare-styleable name="TypeAttributeView">
        <attr name="android:text"/>
        <attr name="previewText" format="string"/>
        <attr name="previewTextAppearance" format="reference"/>
        <attr name="previewAlpha" format="reference"/>
    </declare-styleable>

    <!--Shape attribute view attributes-->
    <declare-styleable name="ShapeAttributeView">
        <attr name="android:text"/>
        <attr name="shapeSizeLetter" format="string"/>
        <attr name="shapeFillColor" format="color"/>
        <attr name="shapeStrokeColor" format="color"/>
        <attr name="shapeAppearanceAttr" format="reference"/>
    </declare-styleable>

</resources>